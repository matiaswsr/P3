@model WebMVC.Models.ViewModelPlantas

@{
    ViewData["Title"] = "CreatePlanta";
}

<h1>CreatePlanta</h1>

<h4>Planta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreatePlanta">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <select name="IdAmbiente" id="ambiente">
                    (Suit suit in (Suit[]) Enum.GetValues(typeof(Suit)))
                    @foreach (Dominio.EntidadesNegocio.TipoAmbiente ambiente in (Dominio.EntidadesNegocio.TipoAmbiente[]) Enum.GetValues(typeof(Dominio.EntidadesNegocio.TipoAmbiente)) )
                    {
                        <option value="@ambiente.ToString()">@ambiente.ToString()</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <select name="IdTipo" id="tipoPlanta">
                    @foreach (Dominio.EntidadesNegocio.TipoPlanta tipo in Model.Tipos)
                    {
                        <option value="@tipo.Id">@tipo.Nombre</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <select name="IdFicha" id="fichaCuidados">
                    @foreach (Dominio.EntidadesNegocio.FichaCuidados ficha in Model.Fichas)
                    {
                        <option value="@ficha.Id">@ficha.TipoIluminacion +" - "+ @ficha.Temperatura + " - " + @ficha.FrecuenciaRiego </option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
